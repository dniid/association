<h1>Pagamentos</h1>

<%= link_to new_payment_path, class: 'btn btn-light btn-sm' do %>
  <i class="bi bi-plus"></i>
  Novo pagamento
<% end %>

<div id="payments">
<div class="table-responsive">
  <table class="table table-striped mb-0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Associado</th>
        <th>Valor</th>
        <th class="text-end">Pago em</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @payments.each do |payment| %>
        <tr>
          <td><%= payment.id %></td>
          <td><%= payment.person.name %></td>
          <td><%= payment.amount %></td>
          <td class="text-end"><%= payment.paid_at %></td>
          <td class="text-end">
            <%= button_to payment, method: :delete, class: "btn btn-danger btn-sm" do %>
              <i class="bi bi-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render partial: 'shared/pagination', locals: { pagination: @pagination, path: payments_path } %>
</div>
