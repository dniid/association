<%= link_to "< Voltar", people_path, class: 'btn btn-secondary btn-sm' %>

<%= render @person %>

<%= link_to 'Editar', edit_person_path(@person), class: "btn btn-primary mb-2" %>

<%= button_to "Remover", @person, method: :delete, class: 'btn btn-danger' %>

<div class="mt-4">
  <span class="fs-2">Trilha de Auditoria </span>
  <table class="table table-striped mb-0">
    <thead>
      <tr>
        <th>Alterações</th>
        <th>Ação</th>
        <th>Responsável</th>
        <th>Data de modificação</th>
      </tr>
    </thead>
    <tbody>
      <% @audits.each do |audit| %>
        <tr>
          <td><%= audit.audited_changes %></td>
          <td><%= audit.action %></td>
          <td><%= audit.user.email %></td>
          <td><%=l audit.created_at, format: :short %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render partial: 'shared/pagination', locals: { pagination: @pagination, path: person_path(@person) } %>
</div>
